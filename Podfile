source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '8.1'
 
target 'AWSMobileHubHelper' do
    pod 'FBSDKLoginKit', '~> 4.13.1'
    pod 'FBSDKCoreKit', '~> 4.13.1'
    pod 'AWSSNS', '~>2.5.0'
    pod 'AWSS3', '~>2.5.0'
    pod 'AWSLambda', '~>2.5.0'
    pod 'AWSCognito', '~>2.5.0'
    pod 'AWSCognitoIdentityProvider', '~>2.5.0'
end

target 'AWSFacebookSignIn' do
    pod 'FBSDKLoginKit', '~> 4.13.1'
    pod 'FBSDKCoreKit', '~> 4.13.1'
    pod 'AWSCore', '~>2.5.0'
end

target 'AWSGoogleSignIn' do
    pod 'AWSCore', '~>2.5.0'
    pod 'GoogleSignIn', '~> 4.0.0'
end
